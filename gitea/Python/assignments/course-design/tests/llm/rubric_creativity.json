{
  "id": "creativity",
  "description": "创意与体验：界面、交互、痛点解决与创新性",
  "max_score": 20,
  "borderline_band": [9, 14],
  "criteria": [
    {
      "id": "ui_design",
      "description": "界面美观与信息呈现",
      "max_score": 6,
      "scoring_guide": [
        [0, "无界面或只有默认/占位界面"],
        [2, "基础界面，可用但缺乏设计"],
        [4, "界面整洁，有基础排版与配色"],
        [6, "界面美观，有一致的视觉与信息层次，适配常见视口"]
      ]
    },
    {
      "id": "user_experience",
      "description": "交互顺滑度与引导性",
      "max_score": 6,
      "scoring_guide": [
        [0, "操作混乱，无帮助或状态提示"],
        [2, "基本可用，有少量帮助信息"],
        [4, "交互顺畅，有状态/错误提示与示例"],
        [6, "体验优秀，有示例/预设、清晰的成功/失败反馈与合理默认值"]
      ]
    },
    {
      "id": "problem_solving",
      "description": "针对真实痛点的解决力度",
      "max_score": 5,
      "scoring_guide": [
        [0, "未体现实际问题或价值"],
        [2, "提出痛点但解决方案浅显"],
        [4, "明确痛点并提供可行解决方案"],
        [5, "针对痛点有亮点设计或显著价值提升"]
      ]
    },
    {
      "id": "innovation",
      "description": "创新性与差异化",
      "max_score": 3,
      "scoring_guide": [
        [0, "常规实现，无差异化"],
        [1, "有小的个性化元素"],
        [2, "有独特功能/体验点"],
        [3, "设计/交互/玩法上有明显创新或组合创新"]
      ]
    }
  ]
}
