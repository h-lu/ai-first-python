        "#| eval: false\n",
        "from datetime import datetime\n",
        "\n",
        "def get_greeting():\n",
        "    \"\"\"根据当前时间返回问候语\"\"\"\n",
        "    hour = datetime.now().hour\n",
        "    if 6 <= hour < 12:\n",
        "        return \"早上好\"\n",
        "    elif 12 <= hour < 18:\n",
        "        return \"下午好\"\n",
        "    else:\n",
        "        return \"晚上好\"\n",
        "\n",
        "# 主程序\n",
        "name = \"张三\"\n",
        "current_time = datetime.now().strftime(\"%Y-%m-%d %H:%M:%S\")\n",
        "\n",
        "print(f\"{get_greeting()}，{name}！\")\n",
        "print(f\"当前时间：{current_time}\")"
      ],
